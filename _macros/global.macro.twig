{% import 'global.macro' as global %}

{% macro tag(tag, contents, attributes) %}<{{ tag }}{{ global.attributes(attributes) }}>{% if contents is not same as(false) %}{{ contents|raw }}</{{ tag }}>{% endif %}{% endmacro %}

{% macro attributes(attributes) %}{% for a,attribute in attributes|default([]) %}{% if attribute is not iterable %} {{ a }}{% if attribute is not same as(false) %}="{{ attribute }}"{% endif %}{% endif %}{% endfor %}{% endmacro %}

{% macro div(contents, attributes) %}{{- global.tag('div', contents, attributes) -}}{% endmacro %}

{% macro span(contents, attributes) %}{{- global.tag('span', contents, attributes) -}}{% endmacro %}

{% macro main(contents, attributes) %}{{- global.tag('main', contents, attributes) -}}{% endmacro %}

{% macro section(contents, attributes) %}{{- global.tag('section', contents, attributes) -}}{% endmacro %}

{% macro article(contents, attributes) %}{{- global.tag('article', contents, attributes) -}}{% endmacro %}

{% macro aside(contents, attributes) %}{{- global.tag('aside', contents, attributes) -}}{% endmacro %}

{% macro nav(contents, attributes) %}{{- global.tag('nav', contents, attributes) -}}{% endmacro %}