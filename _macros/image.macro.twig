{% import 'global.macro' as global %}
{% import 'image.macro' as image %}

{# Image #}

{% macro img(src, alt, attributes) %}
    {{ global.tag('img', false, {src: src, alt: alt|default('')}|merge(attributes|default({}))) }}
{% endmacro %}

{# Icon #}

{% macro icon(icon, contents, attributes, tag) %}
    {{ global.tag(tag|default('i'), contents, {'data-icon': icon}|merge(attributes|default({}))) }}
{% endmacro %}

{# Loading icon #}

{% macro loading(attributes) %}
    {{ image.icon('loading', '', attributes) }}
{% endmacro %}

