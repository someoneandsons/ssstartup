{% import 'global.macro' as global %}

{# Headings #}

{% macro h(level, contents, attributes) %}{{- global.tag('h'~level, contents, attributes) -}}{% endmacro %}

{# Paragraphs #}

{% macro p(contents, attributes) %}{{- global.tag('p', contents, attributes) -}}{% endmacro %}

{# Blockquotes #}

{% macro blockquote(contents, attributes) %}{{- global.tag('blockquote', contents, attributes) -}}{% endmacro %}

{# Inline elements #}

{% macro a(href, contents, attributes) %}{{- global.tag('a', contents, {href: href}|merge(attributes|default({}))) -}}{% endmacro %}

{% macro em(contents, attributes) %}{{- global.tag('em', contents, attributes) -}}{% endmacro %}

{% macro strong(contents, attributes) %}{{- global.tag('strong', contents, attributes) -}}{% endmacro %}

{% macro b(contents, attributes) %}{{- global.tag('b', contents, attributes) -}}{% endmacro %}

{% macro i(contents, attributes) %}{{- global.tag('i', contents, attributes) -}}{% endmacro %}

{% macro u(contents, attributes) %}{{- global.tag('u', contents, attributes) -}}{% endmacro %}

{% macro del(contents, attributes) %}{{- global.tag('del', contents, attributes) -}}{% endmacro %}

{% macro ins(contents, attributes) %}{{- global.tag('ins', contents, attributes) -}}{% endmacro %}

{% macro s(contents, attributes) %}{{- global.tag('s', contents, attributes) -}}{% endmacro %}

{% macro sup(contents, attributes) %}{{- global.tag('sup', contents, attributes) -}}{% endmacro %}

{% macro sub(contents, attributes) %}{{- global.tag('sub', contents, attributes) -}}{% endmacro %}

{% macro small(contents, attributes) %}{{- global.tag('small', contents, attributes) -}}{% endmacro %}

{% macro abbr(title, contents, attributes) %}{{- global.tag('abbr', contents, {title: title}|merge(attributes|default({}))) -}}{% endmacro %}

{% macro kbd(contents, attributes) %}{{- global.tag('kbd', contents, attributes) -}}{% endmacro %}

{% macro q(contents, attributes) %}{{- global.tag('q', contents, attributes) -}}{% endmacro %}

{% macro cite(contents, attributes) %}{{- global.tag('cite', contents, attributes) -}}{% endmacro %}

{% macro dfn(contents, attributes) %}{{- global.tag('dfn', contents, attributes) -}}{% endmacro %}

{% macro mark(contents, attributes) %}{{- global.tag('mark', contents, attributes) -}}{% endmacro %}

{% macro code(contents, attributes) %}{{- global.tag('code', contents, attributes) -}}{% endmacro %}

{% macro samp(contents, attributes) %}{{- global.tag('samp', contents, attributes) -}}{% endmacro %}

{% macro var(contents, attributes) %}{{- global.tag('var', contents, attributes) -}}{% endmacro %}

{# Preformatted text #}

{% macro pre(contents, attributes) %}{{- global.tag('pre', contents, attributes) -}}{% endmacro %}

{# Time #}

{% macro time(datetime, contents, attributes) %}{{- global.tag('time', contents, {datetime: datetime}|merge(attributes|default({}))) -}}{% endmacro %}

{# Address #}

{% macro address(contents, attributes) %}{{- global.tag('address', contents, attributes) -}}{% endmacro %}

{# Details #}

{% macro details(summary, contents, attributes) %}{{- global.tag('details', global.tag('summary', summary)~contents, attributes) -}}{% endmacro %}

{# Progress #}

{% macro progress(value, max, attributes) %}{{- global.tag('progress', '', {value: value, max: max}|merge(attributes|default({}))) -}}{% endmacro %}

{# Dividers #}

{% macro hr(attributes) %}{{- global.tag('hr', false, attributes) -}}{% endmacro %}

{% macro br(attributes) %}{{- global.tag('br', false, attributes) -}}{% endmacro %}