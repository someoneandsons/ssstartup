{% import 'global.macro' as global %}

{# Unordered list #}

{% macro ul(contents, attributes) %}
	{% if contents is iterable %}
		{% set contents = contents|join() %}
	{% endif %}
    {{ global.tag('ul', contents, attributes) }}
{% endmacro %}

